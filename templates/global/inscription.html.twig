{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}


{% block body %}

    {{form_start(form, { 'attr' : { 'class': 'form-global' } })}}
        
        {{ form_row(form.username, {
            'attr': {'placeholder': 'Saisir un nom d\'utilisateur'},
            'class': 'form-control',
            'label': 'Nom d\'utilisateur'
        })}}

        {{ form_row(form.password, {
            'attr': {'placeholder': 'Saisir un mot de passe'},
            'class': 'form-control',
            'label': 'Mot de passe'
        })}}

        {{ form_row(form.verifPassword, {
            'attr': {'placeholder': 'Saisir à nouveau le mot de passe'},
            'class': 'form-control',
            'label': 'Vérification du mot de passe'
        })}}

        <button class="btn btn-lg btn-success btn-block" type="submit">S'inscrire</button>
    {{form_end(form)}}
{% endblock %}
